{
	"name": "mreschke/mrcore",
	"description": "A Wiki/CMS built with Laravel 5",
	"keywords": ["mrcore", "wiki", "cms", "framework", "laravel"],
	"license": "MIT",
	"type": "project",
    "repositories": [
        { "type": "vcs", "url": "https://github.com/dynatron/dealer"},
        { "type": "vcs", "url": "https://github.com/mreschke/mrcore-themes-bootswatch"}
    ],
	"require": {
		"laravel/framework": "5.0.*",
		"illuminate/html": "~5.0",
		"guzzlehttp/guzzle": "~4.0",
		"predis/predis": "1.0.1",
		"filp/whoops": "1.1.3",
		"sabre/dav": "1.8.7",
		"camspiers/porter-stemmer": "1.0.0",
		"easybook/geshi": "1.0.8.12",
		"dynatron/dealer": "master"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
		"barryvdh/laravel-debugbar": "2.0.0"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"Mrcore\\": "app/",
			"Mrcore\\Apps\\": "../Apps/",
			"Mrcore\\Modules\\": "../Modules/",
			"Mrcore\\Themes\\": "../Themes/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
